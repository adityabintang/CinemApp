<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bintang.cinemapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CinemApp">
        <activity android:name="com.bintang.Main.Login.LoginActivity"></activity>
        <activity android:name="com.bintang.Main.OnBoarding.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bintang.Main.List.AllMovieActivity"
            android:label="@string/title_activity_all_movie"
            android:theme="@style/Theme.CinemApp.NoActionBar"></activity>
        <activity android:name="com.bintang.Main.Detail.DetailActivity" />
        <activity android:name="com.bintang.Main.Home.MainActivity"></activity>
        <activity
            android:name="com.bintang.Main.WishList.WishListActivity"
            android:label="@string/title_movie_favorite"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>